{% extends 'base.html.twig' %}

{% block body %}
    <h1>Jugadores</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for jugadore in jugadores %}
            <tr>
                <td><a href="{{ path('jugadores_show', { 'id': jugadore.id }) }}">{{ jugadore.id }}</a></td>
                <td>{{ jugadore.nombre }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('jugadores_show', { 'id': jugadore.id }) }}">Mostrar</a>
                        </li>
                        <li>
                            <a href="{{ path('jugadores_edit', { 'id': jugadore.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a  class="btn btn-primary" href="{{ path('jugadores_new') }}">Crear un Nuevo Jugador</a>
        </li>
    </ul>
{% endblock %}
