{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <h1>Listado de Clubs</h1>

    <table class="table table-condensed">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Telefono</th>
            <th>Â¿Borrado?</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>
                <td><a href="{{ path('club_show', { 'id': club.id }) }}">{{ club.id }}</a></td>
                <td>{{ club.nombre }}</td>
                <td>{{ club.telefono }}</td>
                <td>{% if club.borrado %}Si{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('club_show', { 'id': club.id }) }}">Mostrar</a>
                        </li>
                        <li>
                            <a href="{{ path('club_edit', { 'id': club.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('club_new') }}">Crear un Nuevo Club</a>


{% endblock %}

